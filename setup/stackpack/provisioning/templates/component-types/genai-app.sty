- _type: ComponentType
  name: "genai.app"
  iconbase64: "{{ include "./icons-svg/genai_app.svg" "base64" }}"
  identifier: urn:stackpack:openlit:shared:component-type:genai-app
  highlights:
    namePlural: genai_apps
    fields:
      - fieldId: type
        label:
          title: Type
        valueExtractor:
          _type: ComponentTypeSource
        display:
          _type: TagDisplay
        _type: ComponentTypeField
      - fieldId: health
        label:
          title: Health
        valueExtractor:
          _type: HealthSource
        display:
          _type: HealthBadgeDisplay
        _type: ComponentTypeField
      - fieldId: labels
        label:
          title: Labels
        valueExtractor:
          _type: TagsSource
        display:
          singular: label
          _type: TagDisplay
        _type: ComponentTypeField
    about:
      fields:
        - type
        - health
        - labels
      _type: ComponentTypeAbout
    events:
      showEvents: false
      _type: ComponentTypeEvents
    showLogs: false
    showLastChange: false
    externalComponent:
      showConfiguration: false
      showStatus: false
      externalIdSelector: "^openlit:"
      _type: ComponentTypeExternalComponent
    relatedResources:
      - resourceType: genai.system
        title: GenAI Systems
        stql:
          (withNeighborsOf(direction = "down", components = (id = "{COMPONENT_ID}"),
          levels = "1")) and (label = "gen_ai_system" or label = "gen_vectordb_system")
        _type: ComponentTypeRelatedResources
    metrics:
      - name: Cost
        description: Cost Stats
        bindings:
          - urn:stackpack:openlit:shared:metric-binding:app-avg-usage-cost
          - urn:stackpack:openlit:shared:metric-binding:app-avg-total-usage-cost
        defaultExpanded: true
        _type: ComponentTypeMetricCategory
      - name: Tokens
        description: Token Stats
        bindings:
          - urn:stackpack:openlit:shared:metric-binding:app-total-usage-tokens
        defaultExpanded: true
        _type: ComponentTypeMetricCategory
      - name: Requests
        description: Request Stats
        bindings:
          - urn:stackpack:openlit:shared:metric-binding:app-request-total-success
          - urn:stackpack:openlit:shared:metric-binding:app-total-requests
          - urn:stackpack:openlit:shared:metric-binding:app-request-rate
        defaultExpanded: true
        _type: ComponentTypeMetricCategory
    _type: ComponentTypeHighlights
